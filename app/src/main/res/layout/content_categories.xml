        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/btnDairyProducts"
        app:layout_constraintRight_toRightOf="@+id/btnDairyProducts"
        app:layout_constraintTop_toBottomOf="@+id/btnDairyProducts" />

    <ImageButton
        android:id="@+id/btnLeftovers"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:onClick="categoryLeftovers"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnFruit"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/btnFruit"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:onClick="categoryFruits"
        app:layout_constraintLeft_toRightOf="@+id/btnDrinks"
        app:layout_constraintRight_toLeftOf="@+id/btnLeftovers"
        app:layout_constraintTop_toBottomOf="@+id/txtCorn"
        app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

    <TextView
        android:id="@+id/txtFruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Fruit *"
        app:layout_constraintLeft_toLeftOf="@+id/btnFruit"
        app:layout_constraintRight_toRightOf="@+id/btnFruit"
        app:layout_constraintTop_toBottomOf="@+id/btnFruit" />

    <TextView
        android:id="@+id/txtDrinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Drinks"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="@+id/btnDrinks"
        app:layout_constraintRight_toRightOf="@+id/btnDrinks"
        app:layout_constraintTop_toBottomOf="@+id/btnDrinks" />

    <ImageButton
        android:id="@+id/btnDrinks"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:onClick="categoryDrinks"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnFruit"
        app:srcCompat="@mipmap/ic_launcher" />
